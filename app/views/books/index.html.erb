<h1>Books</h1>
<table>
  <tr>
    <th>Title</th> <th>Body</th> <th></th> <th></th> <th></th>
  </tr>
  <tr>
    <% @books.each do |books| %>
    <td><span><%= books.title %></span></td>
    <td><span><%= books.body %></span></td>
    <td><span><%= link_to "Show", book_path(books.id) %></span></td>
    <td><span><%= link_to "Edit", edit_book_path(books.id) %></span></td>
    <td><span><%= link_to "Destroy", book_path(books.id), method: :delete, "data-confirm" => "Are You Sureï¼Ÿ" %></span></td>
  </tr>
   <% end %>
</table>

<h2>New Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>
<% end %>